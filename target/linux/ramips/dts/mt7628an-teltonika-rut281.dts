/dts-v1/;

#include <dt-bindings/input/input.h>
#include <dt-bindings/gpio/gpio.h>
#include "mt7628an.dtsi"
#include "platform_name.dtsi"

/ {
	compatible = "teltonika,rut281", "teltonika,rute", "mediatek,mt7628an-soc";
	model = "Teltonika RUT281";

	chosen {
		bootargs = "console=ttyS0,115200 root=/dev/mtdblock5 is_full_hwver=1";
	};

	gpio-export {
		compatible = "gpio-export";
		#size-cells = <0>;

		gpio_modem_reset {
			gpio-export,name = "modem_reset";
			gpio-export,output = <0>;
			gpios = <&gpio 2 GPIO_ACTIVE_HIGH>;
		};

		gpio_modem_power {
			gpio-export,name = "modem_power";
			gpio-export,output = <0>;
			gpios = <&gpio 3 GPIO_ACTIVE_HIGH>;
		};

		gpio_tpm_reset {
			gpio-export,name = "tpm_reset";
			gpio-export,output = <1>;
			gpios = <&gpio 6 GPIO_ACTIVE_HIGH>;
		};
	};

	keys {
		compatible = "gpio-keys";

		reset {
			label = "reset";
			gpios = <&gpio 46 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};
	};

	leds {
		compatible = "gpio-leds";

		eth1_led {
			label = "eth1_led";
			gpios = <&gpio 42 GPIO_ACTIVE_LOW>;
		};

		eth2_led {
			label = "eth2_led";
			gpios = <&gpio 43 GPIO_ACTIVE_LOW>;
		};

		led_gen_2 {
			label = "mob_gen_2";
			gpios = <&gpio 39 GPIO_ACTIVE_HIGH>;
		};

		led_gen_3 {
			label = "mob_gen_3";
			gpios = <&gpio 40 GPIO_ACTIVE_HIGH>;
		};

		led_gen_4 {
			label = "mob_gen_4";
			gpios = <&gpio 41 GPIO_ACTIVE_HIGH>;
		};

		led_ssid_1 {
			label = "mob_ssid_1";
			gpios = <&gpio 11 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer";
		};

		led_ssid_2 {
			label = "mob_ssid_2";
			gpios = <&gpio 44 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer";
		};

		led_ssid_3 {
			label = "mob_ssid_3";
			gpios = <&gpio 36 GPIO_ACTIVE_LOW>;
			linux,default-trigger = "timer";
		};

		led_ssid_4 {
			label = "mob_ssid_4";
			gpios = <&gpio 1 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer";
		};

		led_ssid_5 {
			label = "mob_ssid_5";
			gpios = <&gpio 45 GPIO_ACTIVE_LOW>;
			linux,default-trigger = "timer";
		};

	};

	tlt_gpios { // Modify according to wiki page "DTS syntax with Libgpiod changes"
		gpiochip_info {
			hw_0 {
				hwver = <0>;
				gpiochip_count = <3>;

				gpiochip_0 = <32>; // Built-in
				gpiochip_1 = <32>; // Built-in
				gpiochip_2 = <32>; // Built-in
			};
		};

		ioman {
			GPIO_0 {
				line_name = "GPIO_IN_1";
			};
			GPIO_37 {
				line_name = "GPIO_OUT_1";
			};
		};

		misc {
			GPIO_2 {
				line_name = "GPIO_MODEM_RESET_1";
			};
			GPIO_3 {
				line_name = "GPIO_MODEM_POWER_1";
			};
			GPIO_6 {
				line_name = "GPIO_TPM_REST";
			};
		};
	};

	ioman {
		layout@0{
			io@0 { // 4pin #3
				label = "din1";
				block_type = BLOCK_4PIN;
				block_pin = "3";
				gpio_in = "GPIO_IN_1";
				io_param = "g0";
			};
			io@1 { // 4pin #4
				label = "dout1";
				block_type = BLOCK_4PIN;
				block_pin = "4";
				gpio_out = "GPIO_OUT_1";
				io_param = "g1";
			};
		};
	};
};

&mnfinfo {
	simpin1 {
		default = "";
		sec;
	};

	simpin2 {
		default = "";
		sec;
	};

	sim_count {
		default =  "2";
	};

	sim_cfg {
		default = "1111000_1122000";
	};

	blver {
		reg = <&boot 0x3f000 0xa>;
		trailling-data;
		strip-whitespaces;
		type = "ascii";
		log;
	};
};

&state_default {
	gpio {
		groups = "i2c", "i2s", "uart1", "p4led_an", "p3led_an", "p2led_an", "p1led_an", "p0led_an", "gpio", "wled_an", "perst", "spi cs1";
		function = "gpio";
	};
};

&spi0 {
	status = "okay";

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <10000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			boot: partition@0 {
				label = "u-boot";
				reg = <0x0 0x40000>;
				read-only;
			};

			config: partition@40000 {
				compatible = "nvmem-cells";
				#address-cells = <1>;
				#size-cells = <1>;

				label = "config";
				reg = <0x040000 0x010000>;
				read-only;

				macaddr_config_0: macaddr@0 {
					reg = <0x0 0x6>;
				};
			};

			factory: partition@50000 {
				label = "factory";
				reg = <0x050000 0x030000>;
				read-only;
			};

			partition@80000 {
				label = "firmware";
				reg = <0x080000 0x1ED0000>;
			};

			partition@1F50000 {
				label = "event-log";
				reg = <0x1F50000 0xB0000>;
			};
		};
	};
};

&wmac {
	status = "okay";
	nvmem-cells = <&macaddr_config_0>;
	nvmem-cell-names = "mac-address";
	mac-address-increment = <2>;
	mediatek,mtd-eeprom = <&factory 0x20000>;
};

&ethernet {
	nvmem-cells = <&macaddr_config_0>;
	nvmem-cell-names = "mac-address";
};

&esw {
	mediatek,portmap = <0x3e>;
};

&i2c {
	status = "okay";
	clock-frequency = <100000>;
	tlt-mnf,hwver = <500 9999>;

	tpm: tpm@2e {
		compatible = "infineon,slb9673";
		reg = <0x2e>;
		status = "okay";
	};
};
