#include "mt7621-teltonika-common.dtsi"
#include "mt7621-teltonika-rutm-flash.dtsi"
/ {
	compatible = "teltonika,atrm50", "mediatek,mt7621-soc";
	model = "Teltonika ATRM50";

	ext_io {
		compatible = "spi-gpio";
		#address-cells = <1>;
		#size-cells = <0>;

		gpio-sck = <&gpio 9 GPIO_ACTIVE_HIGH>;	// 74HC595 SRCLK (Serial Clock)
		gpio-mosi = <&gpio 5 GPIO_ACTIVE_HIGH>;	// 74HC595 SER (Serial)
		cs-gpios = <&gpio 15 GPIO_ACTIVE_HIGH>;	// 74HC595 RCLK (Register Clock)
		num-chipselects = <1>;

		shift_io: shift_io@0 {
			compatible = "fairchild,74hc595";
			reg = <0>;
			gpio-controller;
			#gpio-cells = <2>;
			registers-number = <3>;
			spi-max-frequency = <10000000>;
			enable-gpios = <&gpio 16 GPIO_ACTIVE_LOW>;
		};
	};

	keys {
		compatible = "gpio-keys";

		reset {
			label = "reset";
			gpios = <&gpio 10 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};
	};

	gpio-poweroff {
		compatible = "gpio-poweroff";
		active-delay-ms = <300>;
		inactive-delay-ms = <200>;
		poweroff-gpios = <&gpio 8 GPIO_ACTIVE_HIGH>;
		battery-gpios = <&gpio 12 0>;
		ignition-gpios = <&gpio 13 0>;
	};

	gpio-export {
		compatible = "gpio-export";
		#size-cells = <0>;

		gpio_modem_reset {
			gpio-export,name = "modem_reset";
			gpio-export,output = <0>;
			gpios = <&shift_io 21 GPIO_ACTIVE_HIGH>;
		};

		gpio_modem_power {
			gpio-export,name = "modem_power";
			gpio-export,output = <1>; // tmp
			gpios = <&shift_io 23 GPIO_ACTIVE_HIGH>;
		};

		gpio_modem_status {
			gpio-export,name = "modem_status";
			gpio-export,input = <0>;
			gpios = <&gpio 7 GPIO_ACTIVE_LOW>;
		};

		gpio_sim_select {
			gpio-export,name = "sim_sel";
			gpio-export,output = <0>;
			gpios = <&shift_io 22 GPIO_ACTIVE_HIGH>;
		};

		gpio_tpm_reset {
			gpio-export,name = "tpm_reset";
			gpio-export,output = <1>;
			gpios = <&gpio 18 GPIO_ACTIVE_HIGH>;
		};

	};

	leds {
		compatible = "gpio-leds";

		led_power {
			label = "power";
			gpios = <&gpio 0 GPIO_ACTIVE_LOW>;
			default-state = "on";
			retain-state-shutdown;
		};

		led_gen_3 {
			label = "mob_gen_3";
			gpios = <&shift_io 10 GPIO_ACTIVE_HIGH>;
		};

		led_gen_4 {
			label = "mob_gen_4";
			gpios = <&shift_io 11 GPIO_ACTIVE_HIGH>;
		};

		led_gen_5 {
			label = "mob_gen_5";
			gpios = <&shift_io 12 GPIO_ACTIVE_HIGH>;
		};

		led_wifi_24 {
			label = "wifi_gen_2";
			gpios = <&shift_io 17 GPIO_ACTIVE_HIGH>;
		};

		led_wifi_50 {
			label = "wifi_gen_5";
			gpios = <&shift_io 18 GPIO_ACTIVE_HIGH>;
		};

		led_wan_sim1 {
			label = "wan_sim_1";
			gpios = <&shift_io 19 GPIO_ACTIVE_HIGH>;
		};

		led_wan_sim2 {
			label = "wan_sim_2";
			gpios = <&shift_io 20 GPIO_ACTIVE_HIGH>;
		};

		led_wan_eth {
			label = "wan_eth_3";
			gpios = <&shift_io 9 GPIO_ACTIVE_HIGH>;
		};

		led_wan_wifi {
			label = "wan_wifi_4";
			gpios = <&shift_io 8 GPIO_ACTIVE_HIGH>;
		};

		led_ssid_1 {
			label = "mob_ssid_1";
			gpios = <&shift_io 13 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer"; // only
		};

		led_ssid_3 {
			label = "mob_ssid_3";
			gpios = <&shift_io 14 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer"; // only
		};

		led_ssid_5 {
			label = "mob_ssid_5";
			gpios = <&shift_io 15 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer"; //only
		};

		led_watchdog_reset {
			label = "watchdog_reset";
			gpios = <&gpio 11 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer"; // only
		};

		led_eth_y4 { // WAN
			label = "eth_y4";
			gpios = <&shift_io 1 GPIO_ACTIVE_HIGH>;
		};

		led_eth_y3 {
			label = "eth_y3";
			gpios = <&shift_io 3 GPIO_ACTIVE_LOW>;
		};

		led_eth_y2 {
			label = "eth_y2";
			gpios = <&shift_io 5 GPIO_ACTIVE_HIGH>;
		};

		led_eth_y1 {
			label = "eth_y1";
			gpios = <&shift_io 7 GPIO_ACTIVE_HIGH>;
		};

		led_eth_g4 { // WAN
			label = "eth_g4";
			gpios = <&shift_io 0 GPIO_ACTIVE_HIGH>;
		};

		led_eth_g3 {
			label = "eth_g3";
			gpios = <&shift_io 2 GPIO_ACTIVE_LOW>;
		};

		led_eth_g2 {
			label = "eth_g2";
			gpios = <&shift_io 4 GPIO_ACTIVE_HIGH>;
		};

		led_eth_g1 {
			label = "eth_g1";
			gpios = <&shift_io 6 GPIO_ACTIVE_HIGH>;
		};
	};

	tlt_gpios { // Modify according to wiki page "DTS syntax with Libgpiod changes"
		gpiochip_info {
			hw_0 {
				hwver = <0>;
				gpiochip_count = <4>;

				gpiochip_0 = <32>; // Built-in
				gpiochip_1 = <32>; // Built-in
				gpiochip_2 = <32>; // Built-in
				gpiochip_3 = <24>; // Shift Register
			};
		};

		ioman {
			GPIO_12 {
				line_name = "GPIO_IN_1";
			};
			GPIO_13 {
				line_name = "GPIO_IN_2";
			};
			GPIO_6 {
				line_name = "BAT_IGN_CLOCK";
			};
			GPIO_17 {
				line_name = "BAT_IGN_MODE";
			};
		};

		misc {
			GPIO_18 {
				line_name = "TPM_RESET";
			};
			GPIO_112 {
				line_name = "GPIO_GPS_POWER";
			};
			GPIO_117 {
				line_name = "GPIO_MODEM_RESET_1";
			};
			GPIO_118 {
				line_name = "GPIO_SIM_SELECT";
			};
			GPIO_119 {
				line_name = "GPIO_MODEM_POWER_1";
			};
		};
	};

	ioman {
		layout@0 {
			scheduler_disabled;
			io@0 {
				label = "bat";
				block_type = BLOCK_M12_4;
				default_direction = "in";
				block_pin = "4";
				gpio_in = "GPIO_IN_1";
			};
			io@1 {
				label = "ign";
				block_type = BLOCK_M12_4;
				default_direction = "in";
				block_pin = "3";
				gpio_in = "GPIO_IN_2";
			};
			io@2 { // index must be before "bat_ign_mode" to work properly
				label = "bat_ign_clock";
				default_direction = "out";
				gpio_out = "BAT_IGN_CLOCK";
			};
			io@3 {
				label = "bat_ign_mode";
				default_direction = "out";
				gpio_out = "BAT_IGN_MODE";
			};
		};
	};

	chosen {
		bootargs = "console=ttyS0,115200";
	};
};

&state_default {
	gpio {
		groups = "wdt", "jtag", "uart2", "uart3";
		function = "gpio";
	};
};

&xhci {
        status = "okay";
};

&sdhci {
        status = "okay";
};

&switch0 {
	ports {
		port@1 {
			status = "okay";
			label = "lan1";
		};

		port@2 {
			status = "okay";
			label = "lan2";
		};

		port@3 {
			status = "okay";
			label = "lan3";
		};
	};
};

&i2c {
	status = "okay";

	tpm@2e {
		compatible = "infineon,slb9673";
		reg = <0x2e>;
		status = "okay";
	};
};

&mnfinfo {
	sim_cfg {
		default = "1111100_1112000_1121200";
	};
};
