/dts-v1/;

#include <dt-bindings/input/input.h>
#include <dt-bindings/gpio/gpio.h>
#include "mt7628an.dtsi"
#include "platform_name.dtsi"

/ {
	compatible = "teltonika,otd140", "mediatek,mt7628an-soc";
	model = "Teltonika OTD140";

	chosen {
		bootargs = "console=ttyS0,115200 root=/dev/mtdblock4";
	};

	gpio-export {
		compatible = "gpio-export";
		#size-cells = <0>;

		gpio_modem_reset {
			gpio-export,name = "modem_reset";
			gpio-export,output = <0>;
			gpios = <&gpio 2 GPIO_ACTIVE_HIGH>;
		};

		gpio_modem_power {
			gpio-export,name = "modem_power";
			gpio-export,output = <0>;
			gpios = <&gpio 0 GPIO_ACTIVE_HIGH>;
		};

		gpio_sim_select {
			gpio-export,name = "sim_sel";
			gpio-export,output = <0>;
			gpios = <&gpio 11 GPIO_ACTIVE_HIGH>;
		};

		status_gpio {
			gpio-export,name = "status_gpio";
			gpios = <&gpio 36 GPIO_ACTIVE_HIGH>;
		};
	};

	keys {
		compatible = "gpio-keys";

		reset {
			label = "reset";
			gpios = <&gpio 46 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};
	};

	leds {
		compatible = "gpio-leds";

		eth1_led {
			label = "eth1_led";
			gpios = <&gpio 39 GPIO_ACTIVE_HIGH>;
		};

		eth2_led {
			label = "eth2_led";
			gpios = <&gpio 42 GPIO_ACTIVE_HIGH>;
		};

		led_gen_2 {
			label = "mob_gen_2";
			gpios = <&gpio 45 GPIO_ACTIVE_LOW>;
		};

		led_gen_3 {
			label = "mob_gen_3";
			gpios = <&gpio 38 GPIO_ACTIVE_HIGH>;
		};

		led_gen_4 {
			label = "mob_gen_4";
			gpios = <&gpio 37 GPIO_ACTIVE_HIGH>;
		};

		led_ssid_1 {
			label = "mob_ssid_1";
			gpios = <&gpio 43 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer";
		};

		led_ssid_2 {
			label = "mob_ssid_3";
			gpios = <&gpio 41 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer";
		};

		led_ssid_3 {
			label = "mob_ssid_5";
			gpios = <&gpio 40 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer";
		};

		pse_led {
			label = "pse_led";
			gpios = <&gpio 6 GPIO_ACTIVE_HIGH>;
		};

		power_led {
			label = "power_led";
			gpios = <&gpio 1 GPIO_ACTIVE_LOW>;
			default-state = "on";
			retain-state-shutdown;
		};
	};

	tlt_gpios { // Modify according to wiki page "DTS syntax with Libgpiod changes"
		gpiochip_info {
			hw_0 {
				hwver = <0>;
				gpiochip_count = <3>;

				gpiochip_0 = <32>; // Built-in
				gpiochip_1 = <32>; // Built-in
				gpiochip_2 = <32>; // Built-in
			};
		};

		misc {
			GPIO_0 {
				line_name = "GPIO_MODEM_POWER_1";
			};
			GPIO_2 {
				line_name = "GPIO_MODEM_RESET_1";
			};
			GPIO_11 {
				line_name = "GPIO_SIM_SELECT";
			};
			GPIO_36 {
				line_name = "GPIO_MODEM_STATUS";
			};
		};
	};

	poeman {
		bus = "/dev/i2c-0";
		budget@0 {
			budget = <15500>;
			max_port_power = <15400>;
			allowed_deficit = <300>;
		};
	};
};

&mnfinfo {
	simpin1 {
		default = "";
		sec;
	};

	simpin2 {
		default = "";
		sec;
	};

	sim_cfg {
		default = "2111000_2112000";
	};

	sim_count {
		default =  "2";
	};
};

&state_default {
	gpio {
		groups = "i2s", "uart1", "p4led_an", "p3led_an", "p2led_an", "p1led_an", "p0led_an", "gpio", "wled_an", "perst", "spi cs1";
		function = "gpio";
	};
};

&spi0 {
	status = "okay";

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <10000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			boot: partition@0 {
				label = "u-boot";
				reg = <0x0 0x20000>;
				read-only;
			};

			config: partition@20000 {
				compatible = "nvmem-cells";
				#address-cells = <1>;
				#size-cells = <1>;

				label = "config";
				reg = <0x020000 0x010000>;
				read-only;

				macaddr_config_0: macaddr@0 {
					reg = <0x0 0x6>;
				};
			};

			partition@30000 {
				compatible = "denx,uimage";
				label = "firmware";
				reg = <0x030000 0xf40000>;
			};

			partition@f70000 {
				label = "event-log";
				reg = <0xf70000 0x90000>;
			};
		};
	};
};

&ethernet {
	nvmem-cells = <&macaddr_config_0>;
	nvmem-cell-names = "mac-address";
};

&esw {
	mediatek,portmap = <0x3e>;
};

&i2c {
	status = "okay";
};
