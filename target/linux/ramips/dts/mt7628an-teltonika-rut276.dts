/dts-v1/;

#include <dt-bindings/input/input.h>
#include <dt-bindings/gpio/gpio.h>
#include "mt7628an.dtsi"
#include "platform_name.dtsi"

/ {
	compatible = "teltonika,rut276", "teltonika,rute", "mediatek,mt7628an-soc";
	model = "Teltonika RUT276";

	chosen {
		bootargs = "console=ttyS0,115200 root=/dev/mtdblock5 is_full_hwver=1";
	};

	ext_io {
		compatible = "spi-gpio";
		#address-cells = <1>;
		#size-cells = <0>;

		gpio-sck = <&gpio 3 GPIO_ACTIVE_HIGH>;  // SRCLK
		gpio-mosi = <&gpio 1 GPIO_ACTIVE_HIGH>; // SER
		cs-gpios = <&gpio 2 GPIO_ACTIVE_HIGH>;  // RCLK
		num-chipselects = <1>;

		shift_io: shift_io@0 {
			compatible = "fairchild,74hc595";
			reg = <0>;
			gpio-controller;
			#gpio-cells = <2>;
			registers-number = <2>;
			spi-max-frequency = <10000000>;
		};
	};

	gpio-export {
		compatible = "gpio-export";
		#size-cells = <0>;

		gpio_modem_reset {
			gpio-export,name = "modem_reset";
			gpio-export,output = <0>;
			gpios = <&shift_io 5 GPIO_ACTIVE_HIGH>;
		};

		gpio_modem_power {
			gpio-export,name = "modem_power";
			gpio-export,output = <0>;
			gpios = <&shift_io 4 GPIO_ACTIVE_HIGH>;
		};

		gpio_sim_select {
			gpio-export,name = "sim_sel";
			gpio-export,output = <0>;
			gpios = <&shift_io 6 GPIO_ACTIVE_LOW>;
		};
	};

	keys {
		compatible = "gpio-keys";

		reset {
			label = "reset";
			gpios = <&gpio 44 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};
	};

	leds {
		compatible = "gpio-leds";

		eth1_led {
			label = "eth1_led";
			gpios = <&gpio 42 GPIO_ACTIVE_LOW>;
		};

		eth2_led {
			label = "eth2_led";
			gpios = <&gpio 43 GPIO_ACTIVE_LOW>;
		};

		led_gen_3 {
			label = "mob_gen_3";
			gpios = <&gpio 39 GPIO_ACTIVE_HIGH>;
		};

		led_gen_4 {
			label = "mob_gen_4";
			gpios = <&gpio 40 GPIO_ACTIVE_HIGH>;
		};

		led_gen_5 {
			label = "mob_gen_5";
			gpios = <&gpio 41 GPIO_ACTIVE_HIGH>;
		};

		led_ssid_1 {
			label = "mob_ssid_1";
			gpios = <&shift_io 3 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer";
		};

		led_ssid_3 {
			label = "mob_ssid_3";
			gpios = <&shift_io 1 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer";
		};

		led_ssid_5 {
			label = "mob_ssid_5";
			gpios = <&shift_io 2 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer";
		};

		led_power {
			label = "power";
			gpios = <&shift_io 0 GPIO_ACTIVE_LOW>;
			default-state = "on";
			retain-state-shutdown;
		};

	};

	tlt_gpios { // Modify according to wiki page "DTS syntax with Libgpiod changes"
		gpiochip_info {
			hw_0 {
				hwver = <0>;
				gpiochip_count = <4>;

				gpiochip_0 = <32>; // Built-in
				gpiochip_1 = <32>; // Built-in
				gpiochip_2 = <32>; // Built-in
				gpiochip_3 = <16>; // Shift Register
			};
		};

		misc {
			GPIO_101 {
				line_name = "GPIO_MODEM_RESET_1";
			};
			GPIO_100 {
				line_name = "GPIO_MODEM_POWER_1";
			};
			GPIO_102 {
				line_name = "GPIO_SIM_SELECT";
				active_low;
			};
		};
	};
};

&mnfinfo {
	simpin1 {
		default = "";
		sec;
	};

	simpin2 {
		default = "";
		sec;
	};

	sim_cfg {
		default = "2111000_2112000";
	};

	sim_count {
		default =  "2";
	};

	blver {
		reg = <&boot 0x3f000 0xa>;
		trailling-data;
		strip-whitespaces;
		type = "ascii";
		log;
	};
};

&state_default {
	gpio {
		groups = "i2s", "p4led_an", "p3led_an", "p2led_an", "p1led_an", "p0led_an", "gpio", "wled_an", "perst";
		function = "gpio";
	};
};

&spi0 {
	status = "okay";

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <10000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			boot: partition@0 {
				label = "u-boot";
				reg = <0x0 0x40000>;
				read-only;
			};

			config: partition@40000 {
				compatible = "nvmem-cells";
				#address-cells = <1>;
				#size-cells = <1>;

				label = "config";
				reg = <0x040000 0x010000>;
				read-only;

				macaddr_config_0: macaddr@0 {
					reg = <0x0 0x6>;
				};
			};

			factory: partition@50000 {
				label = "factory";
				reg = <0x050000 0x030000>;
				read-only;
			};

			partition@80000 {
				label = "firmware";
				reg = <0x080000 0x1ED0000>;
			};

			partition@f70000 {
				label = "event-log";
				reg = <0x1F50000 0xB0000>;
			};
		};
	};
};

&wmac {
	status = "okay";
	nvmem-cells = <&macaddr_config_0>;
	nvmem-cell-names = "mac-address";
	mac-address-increment = <2>;
	mediatek,mtd-eeprom = <&factory 0x20000>;
};

&ethernet {
	nvmem-cells = <&macaddr_config_0>;
	nvmem-cell-names = "mac-address";
};

&esw {
	mediatek,portmap = <0x3e>;
};

&uart1 {
	status = "okay";
};

&uart2 {
	status = "okay";
};
