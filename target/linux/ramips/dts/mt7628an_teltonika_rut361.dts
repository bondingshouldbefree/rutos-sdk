/dts-v1/;

#include <dt-bindings/input/input.h>
#include <dt-bindings/gpio/gpio.h>
#include "mt7628an.dtsi"
#include "platform_name.dtsi"

/ {
	compatible = "teltonika,rut361", "mediatek,mt7628an-soc";
	model = "Teltonika RUT361";

	chosen {
		bootargs = "console=ttyS0,115200 root=/dev/mtdblock5";
	};

	gpio-export {
		compatible = "gpio-export";
		#size-cells = <0>;

		gpio_modem_reset {
			gpio-export,name = "modem_reset";
			gpio-export,output = <0>;
			gpios = <&gpio 2 GPIO_ACTIVE_HIGH>;
		};

		gpio_modem_power {
			gpio-export,name = "modem_power";
			gpio-export,output = <0>;
			gpios = <&gpio 3 GPIO_ACTIVE_HIGH>;
		};

		gpio_modem_status {
			gpio-export,name = "modem_status";
			gpio-export,input = <0>;
			gpios = <&gpio 38 GPIO_ACTIVE_LOW>;
		};
	};

	keys {
		compatible = "gpio-keys";

		reset {
			label = "reset";
			gpios = <&gpio 46 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};

	};

	leds {
		compatible = "gpio-leds";

		power_led {
			label = "power_led";
			gpios = <&gpio 37 GPIO_ACTIVE_LOW>;
			default-state = "on";
			retain-state-shutdown;
		};

		eth1_led {
			label = "eth1_led";
			gpios = <&gpio 42 GPIO_ACTIVE_HIGH>;
		};

		eth2_led {
			label = "eth2_led";
			gpios = <&gpio 43 GPIO_ACTIVE_HIGH>;
		};

		led_gen_3 {
			label = "mob_gen_3";
			gpios = <&gpio 44 GPIO_ACTIVE_HIGH>;
		};

		led_gen_4 {
			label = "mob_gen_4";
			gpios = <&gpio 1 GPIO_ACTIVE_HIGH>;
		};

		led_ssid_1 {
			label = "mob_ssid_1";
			gpios = <&gpio 41 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer";
		};

		led_ssid_3 {
			label = "mob_ssid_3";
			gpios = <&gpio 40 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer";
		};

		led_ssid_5 {
			label = "mob_ssid_5";
			gpios = <&gpio 39 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer";
		};

	};

	tlt_gpios { // Modify according to wiki page "DTS syntax with Libgpiod changes"
		gpiochip_info {
			hw_0 {
				hwver = <0>;
				gpiochip_count = <3>;

				gpiochip_0 = <32>; // Built-in
				gpiochip_1 = <32>; // Built-in
				gpiochip_2 = <32>; // Built-in
			};
		};

		ioman {
			GPIO_4 {
				line_name = "GPIO_IN_1";
				active_low;
			};
			GPIO_5 {
				line_name = "GPIO_OUT_1";
			};
			GPIO_0 {
				line_name = "GPIO_IN_2";
				active_low;
			};
			GPIO_11 {
				line_name = "GPIO_OUT_2";
			};
		};

		misc {
			GPIO_2 {
				line_name = "GPIO_MODEM_RESET_1";
			};
			GPIO_3 {
				line_name = "GPIO_MODEM_POWER_1";
			};
			GPIO_38 {
				line_name = "GPIO_MODEM_STATUS_1";
				active_low;
			};
		};
	};

	ioman {
		layout@0 {
			io@0 { // 4pin #3
				label = "dio0";
				block_type = BLOCK_4PIN;
				block_pin = "3";
				default_direction = "out";
				gpio_in = "GPIO_IN_1";
				gpio_out = "GPIO_OUT_1";
				io_param = "g0";
			};
			io@1 { // 4pin #4
				label = "dio1";
				block_type = BLOCK_4PIN;
				block_pin = "4";
				default_direction = "in";
				gpio_in = "GPIO_IN_2";
				gpio_out = "GPIO_OUT_2";
				io_param = "g1";
			};
		};
	};
};

&mnfinfo {
	simpin1 {
		default = "";
		sec;
	};

	sim_count {
		default =  "1";
	};

	sim_cfg {
		default = "0111010";
		// 1 esim on ch1 "0121010"
		// 2 esim "1121010_1122010"
	};

};

&state_default {
	gpio {
		groups = "i2s", "p4led_an", "p3led_an", "p2led_an", "p1led_an", "p0led_an", "wled_an", "uart1", "wdt", "perst";
		function = "gpio";
	};
};

&spi0 {
	status = "okay";

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <10000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			boot: partition@0 {
				label = "u-boot";
				reg = <0x0 0x20000>;
				read-only;
			};

			config: partition@20000 {
				compatible = "nvmem-cells";
				#address-cells = <1>;
				#size-cells = <1>;

				label = "config";
				reg = <0x020000 0x010000>;
				read-only;

				macaddr_config_0: macaddr@0 {
					reg = <0x0 0x6>;
				};
			};

			factory: partition@30000 {
				label = "factory";
				reg = <0x030000 0x030000>;
				read-only;
			};

			partition@60000 {
				compatible = "denx,uimage";
				label = "firmware";
				reg = <0x060000 0xf10000>;
			};

			partition@f70000 {
				label = "event-log";
				reg = <0xf70000 0x90000>;
			};
		};
	};
};

&wmac {
	status = "okay";
	nvmem-cells = <&macaddr_config_0>;
	nvmem-cell-names = "mac-address";
	mac-address-increment = <2>;
	mediatek,mtd-eeprom = <&factory 0x20000>;
};

&ethernet {
	nvmem-cells = <&macaddr_config_0>;
	nvmem-cell-names = "mac-address";
};

&esw {
	mediatek,portmap = <0x3e>;
};
