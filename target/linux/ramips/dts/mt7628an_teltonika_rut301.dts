/dts-v1/;

#include <dt-bindings/input/input.h>
#include <dt-bindings/gpio/gpio.h>
#include "mt7628an.dtsi"
#include "platform_name.dtsi"

/ {
	compatible = "teltonika,rut301", "mediatek,mt7628an-soc";
	model = "Teltonika RUT301";

	chosen {
		bootargs = "console=ttyS0,115200 root=/dev/mtdblock4";
	};

	keys {
		compatible = "gpio-keys";

		reset {
			label = "reset";
			linux,code = <KEY_RESTART>;
			gpios = <&gpio 46 GPIO_ACTIVE_LOW>;
			debounce-interval = <60>;
		};
	};

	leds {
		compatible = "gpio-leds";

		power_led {
			label = "power_led";
			gpios = <&gpio 37 GPIO_ACTIVE_LOW>;
			default-state = "on";
			retain-state-shutdown;
		};

		eth1_led {
			label = "eth1_led";
			gpios = <&gpio 43 GPIO_ACTIVE_LOW>;
		};

		eth2_led {
			label = "eth2_led";
			gpios = <&gpio 42 GPIO_ACTIVE_LOW>;
		};

		eth3_led {
			label = "eth3_led";
			gpios = <&gpio 41 GPIO_ACTIVE_LOW>;
		};

		eth4_led {
			label = "eth4_led";
			gpios = <&gpio 40 GPIO_ACTIVE_LOW>;
		};

		wan_led {
			label = "wan_led";
			gpios = <&gpio 39 GPIO_ACTIVE_LOW>;
		};
	};

	tlt_gpios { // Modify according to wiki page "DTS syntax with Libgpiod changes"
		gpiochip_info {
			hw_0 {
				hwver = <0>;
				gpiochip_count = <3>;

				gpiochip_0 = <32>; // Built-in
				gpiochip_1 = <32>; // Built-in
				gpiochip_2 = <32>; // Built-in
			};
		};

		ioman {
			GPIO_2 {
				line_name = "GPIO_OUT_1";
			};
			GPIO_11 {
				line_name = "GPIO_OUT_2";
			};
			GPIO_3 {
				line_name = "GPIO_IN_1";
				active_low;
			};
			GPIO_0 {
				line_name = "GPIO_IN_2";
				active_low;
			};
		};
	};
	ioman {
		layout@0 {
			io@0 { // 4pin #3
				label = "dio0";
				block_type = BLOCK_4PIN;
				block_pin = "3";
				default_direction = "out";
				gpio_in = "GPIO_IN_1";
				gpio_out = "GPIO_OUT_1";
				io_param = "g0";
			};
			io@1 { // 4pin #4
				label = "dio1";
				block_type = BLOCK_4PIN;
				block_pin = "4";
				default_direction = "in";
				gpio_in = "GPIO_IN_2";
				gpio_out = "GPIO_OUT_2";
				io_param = "g1";
			};
		};
	};
};

&state_default {
	gpio {
		groups = "i2s", "uart1", "p4led_an", "p3led_an", "p2led_an", "p1led_an", "p0led_an", "gpio", "wled_an", "perst";
		function = "gpio";
	};
};

&spi0 {
	status = "okay";

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <10000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			boot: partition@0 {
				label = "u-boot";
				reg = <0x0 0x20000>;
				read-only;
			};

			config: partition@20000 {
				compatible = "nvmem-cells";
				#address-cells = <1>;
				#size-cells = <1>;

				label = "config";
				reg = <0x020000 0x010000>;
				read-only;

				macaddr_config_0: macaddr@0 {
					reg = <0x0 0x6>;
				};
			};

			partition@30000 {
				compatible = "denx,uimage";
				label = "firmware";
				reg = <0x030000 0xf40000>;
			};

			partition@f70000 {
				label = "event-log";
				reg = <0xf70000 0x90000>;
			};
		};
	};
};

&mnfinfo {
	sim_count {
		default =  "0";
	};
};

&ethernet {
	nvmem-cells = <&macaddr_config_0>;
	nvmem-cell-names = "mac-address";
};

&esw {
	mediatek,portmap = <0x2f>;
};
