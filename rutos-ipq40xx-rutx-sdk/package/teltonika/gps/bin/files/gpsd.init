#!/bin/sh /etc/rc.common

START=94
STOP=80
USE_PROCD=1

PROGRAM="/usr/sbin/gpsd"
RULES_SCRIPT=/etc/gps/create_rules.sh

. /lib/functions.sh
. /usr/share/libubox/jshn.sh

start_service() {
	config_load gps

    $RULES_SCRIPT gps /etc/gps/gps_rules_filled https_tavl_rule

	config_get enabled gpsd enabled "0"
	[ "$enabled" = "1" ] || { ubus call gsm.modem* gnss_stop > /dev/null 2>&1; return; }

	procd_open_instance gpsd
	procd_set_param command "$PROGRAM"
	procd_set_param respawn ${respawn_threshold:-3600} ${respawn_timeout:-5} ${respawn_retry:-0}
	procd_close_instance
}

service_triggers()
{
	procd_add_reload_trigger "gps"
}

reload_service()
{
	stop
	start
}
