{
	"user": "rpcd",
	"access": {
		"pam": {
			"methods": [ "auth" ]
		},
		"rpc-ping": {
			"methods": [ "pingv4", "pingv6" ]
		},
		"rpc-sys-ext": {
				"methods": [ "*" ]
		},
		"rpc-format": {
				"methods": [ "*" ]
		},
		"lan_info": {
			"methods": [ "get" ]
		},
		"wan_info": {
			"methods": [ "get" ]
		},
		"mwan3": {
			"methods": [ "status"]
		},
		"sys": {
			"methods": [ "reboot", "firstboot", "userdefaults" ]
		},
		"gsm.modem*": {
			"methods": [ "get_sim_slot", "info" ]
		},
		"network.interface": {
			"methods": [ "dump" ]
		},
		"file": {
			"methods": [ "read", "write" ]
		}
	},
	"subscribe": ["gsm.modem*"],
	"send": ["esim.state", "esim.cache_update", "sms.limit"],
	"listen": [ "sim.changed", "lpac.updates", "ubus.object.add" ],
	"publish": [ "session", "iwinfo", "sys", "rpc-sys", "rpc-sys-ext", "rpc-format", "mnfinfo",
				 "profile", "rut_fota", "mwan3", "rpc-ping", "lan_info", "wan_info",
				 "serial", "file", "esim.modem*", "sms_limit", "boardjson",
				 "modbus_client.rpc", "network.rrdns", "uci", "rc",
				 "dlms_client.rpc", "opcua_client.rpc", "mbus_client.rpc", "mbus_client.scan", "dnp3_client.rpc" ]
}
