+		    msg(M_ERR, "Failed to set capabilities for %s: %s",
+		        cmd, strerror(errno));
+	    	}
+		cap_free(caps);
+#endif
                 execve(cmd, argv, envp);
                 exit(OPENVPN_EXECVE_FAILURE);
             }
