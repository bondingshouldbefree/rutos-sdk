#!/bin/sh /etc/rc.common
# Copyright (C) 2021 Teltonika Networks

START=11
STOP=90

USE_PROCD=1

PROG=/usr/sbin/modem_trackd
NAME=modem_trackd
PIDCOUNT=1

start_service() {

	jsonfilter -i /etc/board.json -e '@.hwinfo.mobile' > /dev/null ||
		[[ "$(lsusb)" =~ "(2c7c|2dee):" ]] ||
		[ "$(jsonfilter -i /etc/board.json -e '@.model.platform')" = "X86_64" ] || return

	procd_open_instance
	procd_set_param command "$PROG"
	procd_set_param respawn

	procd_set_param stdout 1
	procd_set_param stderr 1
	procd_set_param user mctl
	procd_close_instance
}

reload_service() {
	stop
	start
}
